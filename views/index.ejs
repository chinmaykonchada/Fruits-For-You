<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Fruits For You</title>
</head>

<body>
    <div class="bg-dark text-secondary px-4 py-5 text-center">
        <div class="py-5">
            <h1 class="display-5 fw-bold text-white">Fruits For You</h1>
            <div class="col-lg-6 mx-auto">
                <p class="fs-5 mb-4">Ultimate destination for choosing Fruits that fit you!</p>
                <form action="/fruit" method="post">
                    <div class="form-group row">
                        <label for="healthConditions" class="col-sm-5 col-form-label text-info fs-5 ">What is your health condition:</label>
                        <div class="col-sm-7">
                          <input type="text" class="form-control" name="healthConditions" placeholder="high bp, diabetes">
                        </div>
                      </div>
                      <br>
                    <div class="form-group row">
                        <label for="improvementArea" class="col-sm-5 col-form-label text-info fs-5 ">What do you want to improve:</label>
                        <div class="col-sm-7">
                          <input type="text" class="form-control" name="improvementArea" placeholder="good sleep">
                        </div>
                      </div>
                      <br>
                      <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                          <button type="submit" class="btn btn-outline-info btn-lg px-4 me-sm-3 fw-bold">Find fruits</button>
                      </div>
                    </form>
            </div>
        </div>
    </div>
    <div id="results" class="container mt-4">
        <% if (fruits && fruits.length > 0) { %>
            <h2 class="text-center mb-4">Recommended Fruits</h2>
            <% fruits.forEach(fruit => { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h3 class="card-title"><%= fruit.name %></h3>
                        <p class="card-text"><strong>Daily amount:</strong> <%= fruit.amount %></p>
                        <p class="card-text"><strong>Benefits:</strong> <%= fruit.benefits %></p>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>
</body>

</html>